<%- include("./../partials/header.ejs") %>

<h1>Enter PIN to View Label</h1>

<% if (error) { %>
    <p style="color: red;"><%= error %></p>
<% } %>

<form action="/viewlabel/<%= labelId %>" method="POST">
    <label for="pin">PIN:</label>
    <input type="password" id="pin" name="pin" maxlength="6" required>
    <button type="submit">Submit</button>
</form>

<%- include("./../partials/footer.ejs") %>

<!-- Additional CSS -->
<style>
    form {
        margin-top: 20px;
    }

    label, input {
        font-size: 18px;
        margin-right: 10px;
    }

    button {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    button:hover {
        background-color: #45a049;
    }
</style>
