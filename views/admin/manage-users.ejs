<%- include("../admin/dashboard.ejs") %>

<h1>Manage Users</h1>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Verified</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user => { %>
        <tr>
            <td><%= user.user_id %></td>
            <td><%= user.email %></td>
            <td><%= user.is_verified %></td>
            <td><%= user.is_active %></td>
            <td>
                <form action="/admin/toggle-user/<%= user.user_id %>" method="POST">
                    <button type="submit"><%= user.is_active ? 'Deactivate' : 'Activate' %></button>
                </form>
            </td>
        </tr>
        <% }); %>
    </tbody>
</table>

